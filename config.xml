<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flaps.helloipad" version="0.0.1" android-versionCode="1" ios-CFBundleVersion="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
<!--     <icon src="res/icon.jpg" width="57" height="57" /> -->
    <name>Helloipad</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <preference name="Orientation" value="landscape" /> -->
        <preference name="loadUrlTimeoutValue" value="700000" />
        <icon src="www/res/android/ldpi.png" density="ldpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- <preference name="Orientation" value="landscape" /> -->
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="Orientation" value="all" />

        <icon src="www/res/ios/icon-60.png" width="60" height="60" />
        <icon src="www/res/ios/icon-60@3x.png" width="180" height="180" />


    </platform>
</widget>
